<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="typeRepositoryTest.xml"/>

    <bean id="dateFormat" class="java.text.SimpleDateFormat">
        <constructor-arg value="yyyy-MM-dd"/>
    </bean>

    <bean id="documentRepository" class="info.kowalczuk.spring.impl.data.DocumentRepositoryImpl">
        <property name="documents">
            <list>
                <ref bean="doc1"/>
                <ref bean="doc2"/>
                <ref bean="doc3"/>
                <ref bean="doc4"/>
            </list>
        </property>
    </bean>
    <bean id="doc1" class="info.kowalczuk.spring.api.model.Document" p:name="Notes" p:type-ref="pdfType"
          p:created-ref="date2" p:modified-ref="date1"/>
    <bean id="doc2" class="info.kowalczuk.spring.api.model.Document" p:name="Dictionary" p:type-ref="docType"
          p:created-ref="date3" p:modified-ref="date1"/>
    <bean id="doc3" class="info.kowalczuk.spring.api.model.Document" p:name="Recipies" p:type-ref="pdfType"
          p:created-ref="date2" p:modified-ref="date3"/>
    <bean id="doc4" class="info.kowalczuk.spring.api.model.Document" p:name="Spring in action" p:type-ref="docType"
          p:created-ref="date3" p:modified-ref="date4"/>

    <bean id="date1" class="java.util.Date" factory-bean="dateFormat" factory-method="parse" c:_0="2019-01-31"/>
    <bean id="date2" class="java.util.Date" factory-bean="dateFormat" factory-method="parse" c:_0="2010-11-21"/>
    <bean id="date3" class="java.util.Date" factory-bean="dateFormat" factory-method="parse" c:_0="2013-05-15"/>
    <bean id="date4" class="java.util.Date" factory-bean="dateFormat" factory-method="parse" c:_0="2015-08-08"/>

</beans>